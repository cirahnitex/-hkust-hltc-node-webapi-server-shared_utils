{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "typeRoots": ["@types","node_modules/@types"],
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "JSXXML"
  },
  "include": ["src/**/*.ts","src/**/*.tsx"],
  "exclude": [
    "node_modules"
  ]
}