    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "typeRoots": ["@types","node_modules/@types"]
